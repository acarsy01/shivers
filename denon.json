{
  "$schema": "https://deno.land/x/denon/schema.json",
  "scripts": {
    "start": {
      "cmd": "deno run --allow-read=. --allow-env --allow-net --allow-write app.ts",
      "desc": "Starts the bot",
      "watch": false
    },
    "start:dev": {
      "cmd": "deno run --allow-read=. --allow-env --allow-net --allow-write app.ts",
      "desc": "Starts the bot in dev mode",
      "watch": true
    }
  }
}